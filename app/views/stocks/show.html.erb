<div class="mb-8 space-y-2">
  <h1 class="text-3xl font-bold text-primary">
    <%= @stock.name %>
  </h1>
  <p class="text-lg">
    <%= @stock.symbol %>
  </p>
</div>



<%= turbo_frame_tag "stock_data",
                    src: stock_data_stock_path(@stock),
                    loading: :lazy,
                    data: { controller: "auto-refresh" } do %>

  <div class="grid lg:grid-cols-[20%_80%] grid-cols-1 gap-6 animate-pulse">

    <div class="space-y-6">
      <div class="h-32 bg-surface-3 rounded-2xl"></div>
      <div class="h-32 bg-surface-3 rounded-2xl"></div>
      <div class="h-32 bg-surface-3 rounded-2xl"></div>
    </div>

    <div class="h-96 bg-surface-3 rounded-2xl"></div>

  </div>

<% end %>
