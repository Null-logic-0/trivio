<div class="bg-surface rounded-xl border border-white/5 shadow-2xl w-full <%= card_class %>">
  <div class="px-4 sm:px-6 py-3 sm:py-4 border-b border-white/5 flex items-center justify-between gap-4">
    <div class="min-w-0">
      <p class="text-[10px] sm:text-[11px] font-semibold tracking-widest text-white/40 uppercase truncate"><%= title %></p>
      <p class="text-lg sm:text-xl font-bold text-white mt-0.5 truncate"><%= subtitle %></p>
    </div>
    <div class="w-7 h-7 sm:w-8 sm:h-8 rounded-full bg-emerald-500/10 flex items-center justify-center flex-shrink-0">
      <span class="text-emerald-400 text-xs sm:text-sm"><%= icon %></span>
    </div>
  </div>

  <div class="<%= content_class %>">
    <%= yield %>
  </div>
</div>