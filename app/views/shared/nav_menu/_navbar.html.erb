<nav class="bg-surface text-font shadow-md">
  <div class="flex justify-between items-center w-full px-4 sm:px-6 lg:px-8 h-16 relative">
    <%= render "shared/logo" %>

    <div class="md:hidden relative flex items-center">
      <input type="checkbox" id="nav-toggle" class="peer hidden"/>

      <!-- Hamburger button -->
      <label for="nav-toggle" class="flex flex-col justify-between w-6 h-5 cursor-pointer">
        <span class="block h-0.5 w-full bg-font rounded transition-all duration-300 peer-checked:rotate-45 peer-checked:translate-y-2.5 origin-center"></span>
        <span class="block h-0.5 w-full bg-font rounded transition-all duration-300 peer-checked:opacity-0"></span>
        <span class="block h-0.5 w-full bg-font rounded transition-all duration-300 peer-checked:-rotate-45 peer-checked:-translate-y-2.5 origin-center"></span>
      </label>

      <!-- Mobile menu -->
      <%= render "shared/nav_menu/nav_menu",
                 menu_class: "absolute right-0 top-10 flex flex-col gap-2 px-4 py-4 w-48 bg-surface-2 rounded-b shadow-lg
                        opacity-0 -translate-y-4 scale-95 pointer-events-none
                        peer-checked:opacity-100 peer-checked:translate-y-0 peer-checked:scale-100 peer-checked:pointer-events-auto
                        transition-all duration-300 ease-out origin-top-right" %>
    </div>

    <!-- Desktop menu -->
    <%= render "shared/nav_menu/nav_menu", menu_class: "hidden md:flex md:items-center md:space-x-6" %>
  </div>
</nav>