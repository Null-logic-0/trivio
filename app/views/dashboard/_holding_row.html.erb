<li
  id="holding_<%= holding.id %>"
  class="px-6 py-4 flex items-center justify-between gap-4 hover:bg-white/[0.02] transition-colors duration-150">

  <div class="flex items-center gap-3 min-w-0">
    <div class="w-9 h-9 rounded-lg bg-emerald-500/10 flex items-center justify-center flex-shrink-0">
      <span class="text-emerald-400 text-xs font-bold">
        <%= holding.stock.symbol.first(2) %>
      </span>
    </div>
    <div class="min-w-0">
      <p class="text-white font-semibold text-sm hover:underline ">
        <%= link_to holding.stock.symbol, stock_path(holding.stock.id) %>
      </p>
      <p class="text-white/40 text-xs"><%= holding.shares %> shares</p>
    </div>
  </div>

  <!-- Sell form -->
  <%= render "dashboard/form", holding: holding %>

</li>
