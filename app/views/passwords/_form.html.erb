<%= form_with url: passwords_path, class: 'space-y-4' do |form| %>
  <%= render "shared/forms/input",
             form: form,
             field: :email_address,
             type: :email_field,
             label: "Email Address",
             required: true,
             placeholder: "jane@example.com" %>

  <div>
    <%= render "shared/forms/submit_button", form: form, text: "Send Email", loading: "Sending..." %>
  </div>
<% end %>